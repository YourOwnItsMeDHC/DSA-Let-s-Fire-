//Approach 2: Convert element(integer) into string, find whether length of str is even 
class Solution {
     public int findNumbers(int[] nums) {
         int countElement = 0;
         for(int element : nums) {
             if(countDigits(element) % 2 == 0) {
                 countElement++;
             }
         }
         return countElement;
     }
    
    static int countDigits(int element) {
        String elementInStr = Integer.toString(element);
        return elementInStr.length();
    }
    
}