class Solution {
    public int[][] generateMatrix(int n) {
        int[][] mat = new int[n][n];
        int temp = n*n;
        
        int left = 0;
        int right = n-1;
        int top = 0;
        int bottom = n-1;
        
        int count = 1;
        
        while(left <= right) {
            
            for(int i=left; i<=right; i++) {
                mat[top][i] = count++;
            }
            
            for(int i=top+1; i<=bottom; i++) {
                mat[i][right] = count++;
            }
            
            if(top != bottom) {
            for(int i=right-1; i>=left; i--) {
                mat[bottom][i] = count++;
              }
            }
            
            if(left != right) {
            for(int i=bottom-1; i>top; i--) {
                mat[i][left] = count++;
              }
            }
            
            left++;
            right--;
            top++;
            bottom--;
        }
        return mat;
    }
}