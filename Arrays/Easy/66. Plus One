//Perfect Approach :

class Solution {
    public int[] plusOne(int[] digits) {
    
        int n = digits.length;
        
        for(int i=n-1; i>=0; i--) {
            if(digits[i] < 9) {
                digits[i]++;
                return digits;
            }
            digits[i] = 0;
        }
        
        //If all digits are 9  , Eg: [9, 9, 9] â¡ [1, 0, 0, 0]
        int[] ans = new int[n+1];
        ans[0] = 1;
        return ans;
    }
}

